        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="5dp"
            android:orientation="vertical"
            android:padding="@dimen/space_8">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_8">

                <LinearLayout
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/textView15"
                            android:fontFamily="@font/cabin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/reciver_name"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="@dimen/space_15"
                            />

                        <TextView
                            android:fontFamily="@font/cabin"
                            android:id="@+id/tv_adres_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_2"
                            android:layout_marginStart="@dimen/space_2"
                            android:textSize="@dimen/space_15"
                            android:text="TextView"
                            android:textColor="#000" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_5"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_deli_mobile"
                            android:textStyle="bold"
                            android:fontFamily="@font/cabin"
                            android:textSize="@dimen/space_15"
                            android:textColor="#000"
                            />

                        <TextView
                            android:id="@+id/tv_adres_phone"
                            android:fontFamily="@font/cabin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_2"
                            android:layout_marginStart="@dimen/space_2"
                            android:text="TextView"
                            android:textColor="#000"
                            android:textSize="15dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_5"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/delivery_charge"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:textSize="@dimen/space_15"
                            android:fontFamily="@font/cabin"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/tv_adres_charge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_2"
                            android:fontFamily="@font/cabin"
                            android:layout_marginStart="@dimen/space_2"
                            android:text="TextView"
                            android:textSize="15dp"
                            android:textColor="#000"
                            android:visibility="gone"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_5"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewadd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address :"
                            android:textStyle="bold"
                            android:textSize="@dimen/space_15"
                            android:textColor="#000"
                            android:fontFamily="@font/cabin"
                            />

                        <TextView
                            android:id="@+id/tv_adres_address"
                            android:layout_width="match_parent"
                            android:fontFamily="@font/cabin"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_2"
                            android:layout_marginStart="@dimen/space_2"
                            android:text="TextView"
                            android:textColor="#000"
                            android:textSize="15dp"/>
                    </LinearLayout>
                    <View
                        android:id="@+id/line"

                        android:layout_marginTop="@dimen/space_10"
                        android:background="@color/colorPrimary"

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_2"/>

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/cabin"
                            android:text="@string/edit"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/cabin"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@+id/edit"
                            android:text="@string/delete"
                            android:textColor="@color/black" />
                    </RelativeLayout>

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></RelativeLayout>

                <RadioButton
                    android:id="@+id/rb_adres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/cabin"
android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_8" />

            </RelativeLayout>
        </LinearLayout>
